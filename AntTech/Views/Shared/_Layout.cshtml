<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AntTech</title> <!-- Thay "AntTech" bằng tên ứng dụng của bạn nếu muốn -->
    <!-- CSS Chuẩn (Bootstrap ví dụ, bạn có thể thay đổi hoặc bỏ đi nếu không dùng) -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- CSS cho Navbar tùy chỉnh của bạn (quan trọng) -->
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" /> <!-- Đảm bảo đường dẫn này đúng với file CSS navbar của bạn -->
    <!-- CSS site chung (nếu có) -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Font Awesome CDN (quan trọng cho icons) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Cho phép các View con thêm CSS riêng (tùy chọn) -->
    @await RenderSectionAsync("Styles", required: false)

</head>
<body>
    <header>
        <!-- Navbar tùy chỉnh theo kiểu Spiderum -->
        <nav class="navbar">
            <div class="navbar-container">
                <!-- Phần bên trái: Logo -->
                <div class="navbar-left">
                    <a href="/" class="navbar-logo">
                        <!-- Đổi href="/" thành link trang chủ của bạn -->
                        <!-- Bạn có thể thay thế bằng thẻ img nếu logo là ảnh -->
                        AntTech <!-- Hoặc tên/logo của bạn -->
                    </a>
                </div>

                <!-- Phần giữa: Các liên kết chính -->
                <div class="navbar-center">
                    <ul class="navbar-links">
                        <li>
                            <a href="#" class="nav-link-styled nav-shop">
                                <i class="fa-solid fa-store"></i> Spider's Shop <!-- Thay đổi text nếu cần -->
                            </a>
                        </li>
                        <li>
                            <a href="#" class="nav-link-styled nav-agency">
                                <i class="fa-solid fa-globe"></i> Agency <!-- Thay đổi text nếu cần -->
                            </a>
                        </li>
                        <li>
                            <a href="#" class="nav-link-styled nav-publishing">
                                <i class="fa-solid fa-pen-to-square"></i> Publishing <!-- Thay đổi text nếu cần -->
                            </a>
                        </li>
                        <!-- Thêm các link khác nếu cần -->
                    </ul>
                </div>

                <!-- Phần bên phải: Tìm kiếm, Liên hệ, Đăng ký, Đăng nhập -->
                <div class="navbar-right">
                    <button class="nav-search-btn" aria-label="Tìm kiếm">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </button>
                    <a href="#" class="nav-link">Liên hệ</a> <!-- Đổi href nếu cần -->
                    <a href="#" class="nav-link">Đăng ký</a> <!-- Đổi href nếu cần -->
                    <a href="#" class="btn btn-primary">Đăng nhập</a> <!-- Đổi href nếu cần -->
                    <!-- Hoặc dùng logic đăng nhập/đăng xuất với @User.Identity.IsAuthenticated -->
                </div>
            </div>
        </nav>
    </header>

    <!-- VÙNG HIỂN THỊ NỘI DUNG CHÍNH CỦA CÁC TRANG CON -->
    <div class="container">
        <!-- Bạn có thể thay đổi hoặc bỏ thẻ div.container này nếu layout của bạn khác -->
        <main role="main" class="pb-3">

            @* ===>>> ĐÂY LÀ PHẦN QUAN TRỌNG ĐỂ SỬA LỖI <<<=== *@
            @RenderBody()
            @* RenderBody() sẽ chèn nội dung của các file View con (Index.cshtml, About.cshtml,...) vào đây *@

        </main>
    </div>

    <!-- FOOTER -->
    <footer class="site-footer">
        <div class="footer-container">
            <div class="footer-content">
                <!-- Cột Thông tin liên hệ -->
                <div class="footer-column footer-contact">
                    <h4>Thông tin liên hệ</h4>
                    <ul class="contact-list">
                        <li class="contact-item">
                            <i class="fa-solid fa-phone"></i>
                            <span>Hotline: 0123 456 789</span>
                        </li>
                        <li class="contact-item">
                            <i class="fa-solid fa-envelope"></i>
                            <span>Email: siuers@siu.edu.vn</span> <!-- Thay email thật của bạn -->
                        </li>
                        <li class="contact-item">
                            <i class="fa-solid fa-location-dot"></i>
                            <span>Địa chỉ: 8C Tống Hữu Định, P. Thảo Điền, Q.2, TP.HCM</span> <!-- Thay địa chỉ thật của bạn -->
                        </li>
                    </ul>
                </div>

                <!-- Cột Về chúng tôi -->
                <div class="footer-column footer-about">
                    <h4>Về chúng tôi</h4>
                    <ul class="about-list">
                        <li><a href="/gioi-thieu">Giới thiệu</a></li> <!-- Đặt link thật -->
                        <li><a href="/dieu-khoan">Điều khoản sử dụng</a></li> <!-- Đặt link thật -->
                        <li><a href="/chinh-sach-bao-mat">Chính sách bảo mật</a></li> <!-- Đặt link thật -->
                    </ul>
                </div>
            </div>

            <!-- Phần bản quyền -->
            <div class="footer-bottom">
                <p>© @DateTime.Now.Year Bản quyền thuộc về Minimart.</p> <!-- Tự động cập nhật năm hiện tại -->
            </div>
        </div>
    </footer>
    <!-- KẾT THÚC FOOTER -->
    <!-- Các script đặt sau footer nếu cần -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @* <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@ <!-- Bỏ comment nếu bạn dùng Bootstrap JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>